text          = "FormaInvertedSoftglowTextSelect.cur"
unavailiable  = "FormaSoftglowUnavailable.cur"
vert          = "FormaInvertedSoftglowVerticalResize.cur"
horz          = "FormaInvertedSoftglowHorizontalResize.cur"
dgn1          = "FormaInvertedSoftglowDiagonalResize1.cur"
dgn2          = "FormaInvertedSoftglowDiagonalResize2.cur"
move          = "FormaInvertedSoftglowMove.cur"
link          = "FormaInvertedSoftglowLinkSelect.cur"
